<!-- Show Menu -->
<script>
    async function showMenu() {
        var x = document.getElementById("NavMenu");
        if (x.className.indexOf(" Show") == -1) {
            x.style.setProperty("visibility", "visible");
            await sleep(500);
            x.className = x.className.replace(" Hide", " Show");
        } else {
            x.className = x.className.replace(" Show", " Hide");
            await sleep(500);
            x.style.setProperty("visibility", "collapse");
        }
    }

    function sleep(ms) {
        return new Promise(resolve => setTimeout(resolve, ms));
    }
</script>

<!-- Change Language -->
<script>
    function changeLanguage() {

        const doc = document.getElementsByClassName("Language")[0];
        const style = getComputedStyle(doc).getPropertyValue("background-image");

        if (style.endsWith("German.png" + '"' + ")"))
            doc.style.setProperty("background-image", "url('../../../src/Flags/English.png')");
        else
            doc.style.setProperty("background-image", "url('../../../src/Flags/German.png')");

    }
</script>

<!-- Change Theme -->
<script>
    function changeTheme() {

        const doc = document.getElementsByClassName("ThemePicker")[0];
        const style = getComputedStyle(doc).getPropertyValue("background-color");
        const style2 = getComputedStyle(doc).getPropertyValue("background");

        if (style == "rgb(17, 17, 17)") {
            doc.style.setProperty("background", "none");
            doc.style.setProperty("background-color", "#fff");
        } else if (style == "rgb(255, 255, 255)") {
            doc.style.setProperty("background-color", "none");
            doc.style.setProperty("background", "var(--Bi)");
        } else if (style2.startsWith("rgba(0, 0, 0, 0) linear-gradient(to right, rgb(218, 0, 112), rgb(162, 12, 242), rgb(62, 70, 203))")) {
            doc.style.setProperty("background-color", "none");
            doc.style.setProperty("background", "var(--Gay)");
        } else if (style2.startsWith("rgba(0, 0, 0, 0) linear-gradient(to right, rgb(242, 36, 0), rgb(255, 154, 48), rgb(255, 243, 50), rgb(112, 198, 11), rgb(5, 122, 228), rgb(255, 53, 173))")) {
            doc.style.setProperty("background", "none");
            doc.style.setProperty("background-color", "#111");
        }

    }
</script>

